                                a.continental(href="#") temp
                            li
                                a.earthpositive(href="#") temp
                            li
                                a.salvage(href="#") temp
                    li.divider
                    li.has-dropdown.not-click
                        a(href="#") PRODUCTS
                        ul.dropdown#drop
                            li
                                a(href="#") temp
                            li
                                a(href="#") temp
                            li
                                a(href="#") temp
                            li
                                a(href="#") temp
                            li
                                a(href="#") temp
                            li
                                a(href="#") temp
                    li.divider
                    li.btn
                        a(href="#") ABOUT
                    li.divider
                    li.btn
                        a(href="#")
                            i.icon-basket
                    li.divider
                    li.btn
                        a(href="#", data-reveal-id="searchModal")
                            i.icon-search
            - else
                ul.right
                    li.divider
                    li.has-dropdown.not-click
                        a(href="#") COLLECTIONS
                        ul.dropdown#drop
                            li
                                a.continental(href="#") temp
                            li
